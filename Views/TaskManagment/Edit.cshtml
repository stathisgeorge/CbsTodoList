@model DataAccess.Data.Models.TaskRecord

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-info ml-0 py-3 rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit task</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="form-floating py-2 col-12">
                <input asp-for="Title" class="form-control border-0 shadow" />
                <label asp-for="Title" class="ms-2"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Description" class="form-control border-0 shadow" />
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="CreatedAt"  readonly class="form-control border-0 shadow" />
                <label asp-for="CreatedAt" class="ms-2"></label>
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            @if (Model.ModifiedAt.HasValue)
            {
                <div class="form-floating py-2 col-12">
                    <input asp-for="ModifiedAt"  readonly class="form-control border-0 shadow" />
                    <label asp-for="ModifiedAt" class="ms-2"></label>
                    <span asp-validation-for="ModifiedAt" class="text-danger"></span>
                </div>
            }
            
            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Edit</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="TaskManagment" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>

</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}